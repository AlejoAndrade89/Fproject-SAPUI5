<mvc:View
    controllerName="com.bootcamp.sapui5.finalproject.controller.NotFound"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        id="notFoundPage"
        title="{i18n>notFoundTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <content>
            <VBox
                class="sapUiContentPadding"
                alignItems="Center"
                justifyContent="Center"
                height="100%"
            >
                <items>
                    <core:Icon
                        src="sap-icon://document"
                        size="8rem"
                        class="sapUiMediumMarginBottom"
                    />
                    <Title
                        text="{i18n>notFoundText}"
                        level="H2"
                        class="sapUiMediumMarginBottom"
                    />
                    <Text
                        text="{i18n>notFoundDescription}"
                        class="sapUiMediumMarginBottom"
                    />
                    <Button
                        text="{i18n>backToHomeButton}"
                        press=".onNavBack"
                        class="sapUiMediumMarginBottom"
                    />
                </items>
            </VBox>
        </content>
    </Page>
</mvc:View>
