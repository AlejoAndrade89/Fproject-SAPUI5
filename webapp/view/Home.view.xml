<mvc:View
    controllerName="com.bootcamp.sapui5.finalproject.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:ui="sap.ui.table"
    displayBlock="true">
    <Page id="supplierListPage" title="{i18n>homePageTitle}">
        <content>
            <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="true">
                <f:title>
                    <f:DynamicPageTitle>
                        <f:heading>
                            <Title text="{i18n>supplierListTitle}"/>
                        </f:heading>
                    </f:DynamicPageTitle>
                </f:title>
                <f:header>
                    <f:DynamicPageHeader pinnable="true">
                        <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                            <items>
                                <VBox>
                                    <FlexBox wrap="Wrap" alignItems="Start">
                                        <items>
                                            <VBox class="sapUiSmallMarginEnd sapUiSmallMarginBottom">
                                                <Label text="{i18n>supplierIdLabel}" labelFor="supplierId"/>
                                                <Input
                                                    id="supplierId"
                                                    placeholder="{i18n>supplierIdPlaceholder}"
                                                    width="200px"
                                                    value="{viewModel>/filter/supplierID}"/>
                                            </VBox>
                                            <VBox class="sapUiSmallMarginEnd sapUiSmallMarginBottom">
                                                <Label text="{i18n>supplierNameLabel}" labelFor="supplierName"/>
                                                <Input
                                                    id="supplierName"
                                                    placeholder="{i18n>supplierNamePlaceholder}"
                                                    width="200px"
                                                    value="{viewModel>/filter/companyName}"/>
                                            </VBox>
                                            <VBox class="sapUiSmallMarginEnd sapUiSmallMarginBottom">
                                                <Label text="{i18n>supplierCityLabel}" labelFor="supplierCity"/>
                                                <Input
                                                    id="supplierCity"
                                                    placeholder="{i18n>supplierCityPlaceholder}"
                                                    width="200px"
                                                    value="{viewModel>/filter/city}"/>
                                            </VBox>
                                        </items>
                                    </FlexBox>
                                </VBox>
                                <VBox alignItems="End">
                                    <Button 
                                        text="{i18n>applyFilterButton}" 
                                        type="Emphasized" 
                                        press=".onApplyFilter"
                                        class="sapUiSmallMarginEnd"/>
                                    <Button 
                                        text="{i18n>resetFilterButton}" 
                                        press=".onResetFilter"
                                        class="sapUiSmallMarginEnd"/>
                                </VBox>
                            </items>
                        </FlexBox>
                    </f:DynamicPageHeader>
                </f:header>
                <f:content>
                    <ui:Table
                        id="suppliersTable"
                        rows="{/Suppliers}"
                        selectionMode="Single"
                        selectionBehavior="RowSelector"
                        visibleRowCount="20"
                        rowSelectionChange=".onRowSelectionChange"
                        enableBusyIndicator="true"
                        alternateRowColors="true"
                        ariaLabelledBy="title">
                        <ui:extension>
                            <OverflowToolbar>
                                <Title id="title" text="{i18n>suppliersTableTitle}"/>
                                <ToolbarSpacer/>
                                <Button
                                    icon="sap-icon://refresh"
                                    tooltip="{i18n>refreshButtonTooltip}"
                                    press=".onRefresh"/>
                            </OverflowToolbar>
                        </ui:extension>
                        <ui:columns>
                            <ui:Column 
                                id="supplierIdColumn" 
                                width="100px" 
                                sortProperty="SupplierID">
                                <Label text="{i18n>supplierIdColumn}"/>
                                <ui:template>
                                    <Text text="{SupplierID}"/>
                                </ui:template>
                            </ui:Column>
                            <ui:Column 
                                id="companyNameColumn" 
                                width="200px" 
                                sortProperty="CompanyName">
                                <Label text="{i18n>companyNameColumn}"/>
                                <ui:template>
                                    <Text text="{CompanyName}"/>
                                </ui:template>
                            </ui:Column>
                            <ui:Column 
                                id="contactNameColumn" 
                                width="150px" 
                                sortProperty="ContactName">
                                <Label text="{i18n>contactNameColumn}"/>
                                <ui:template>
                                    <Text text="{ContactName}"/>
                                </ui:template>
                            </ui:Column>
                            <ui:Column 
                                id="contactTitleColumn" 
                                width="150px" 
                                sortProperty="ContactTitle">
                                <Label text="{i18n>contactTitleColumn}"/>
                                <ui:template>
                                    <Text text="{ContactTitle}"/>
                                </ui:template>
                            </ui:Column>
                            <ui:Column 
                                id="cityColumn" 
                                width="120px" 
                                sortProperty="City">
                                <Label text="{i18n>cityColumn}"/>
                                <ui:template>
                                    <Text text="{City}"/>
                                </ui:template>
                            </ui:Column>
                            <ui:Column 
                                id="countryColumn" 
                                width="120px" 
                                sortProperty="Country">
                                <Label text="{i18n>countryColumn}"/>
                                <ui:template>
                                    <Text text="{Country}"/>
                                </ui:template>
                            </ui:Column>
                            <ui:Column 
                                id="phoneColumn" 
                                width="120px" 
                                sortProperty="Phone">
                                <Label text="{i18n>phoneColumn}"/>
                                <ui:template>
                                    <Text text="{Phone}"/>
                                </ui:template>
                            </ui:Column>
                        </ui:columns>
                    </ui:Table>
                </f:content>
            </f:DynamicPage>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button
                    id="navigateButton"
                    text="{i18n>detailViewButtonText}"
                    type="Emphasized"
                    press=".onNavigateToDetail"
                    enabled="false"
                    icon="sap-icon://display"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>